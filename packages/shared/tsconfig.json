{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "composite": true,
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "noErrorTruncation": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "esnext",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
  },
  "references": [ ],
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
    "assets/dist",
    "node_modules"
  ],
  "include": [
    "@types",
    "./global.d.ts",
    "./*.d.ts",
    "./*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}